<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="ConfigSettings" Version="1.0.11" />
    <PackageReference Include="DocumentFormat.OpenXml" Version="2.13.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="5.0.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="5.0.1" />
    <PackageReference Include="Microsoft.OData.Core" Version="7.10.0" />
    <PackageReference Include="NDesk.Options.Core" Version="1.2.5" />
    <PackageReference Include="NLog" Version="4.7.10" />
    <PackageReference Include="NLog.Extensions.Logging" Version="1.7.2" />
    <PackageReference Include="Simple.OData.Client" Version="5.21.0" />
  </ItemGroup>

  <ItemGroup>
    <None Update="nlog.config">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="_ConfigSettings.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <Target Name="CopyUI" AfterTargets="Build" >
    <PropertyGroup>
      <ImportDataUIPath>..\Client\ImportUtilServer</ImportDataUIPath>
      <ImportDataUIPublishOutputPath>$(MSBuildProjectDirectory)\$(OutputPath)ImportDataUI</ImportDataUIPublishOutputPath>
    </PropertyGroup>
    <Message Importance="high" Text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa $(ImportDataUIPublishOutputPath)" />
    <MSBuild Projects="$(ImportDataUIPath)\ImportUtilServer.csproj" Targets="Publish" 
             Properties="Configuration=Release;PublishDir=$(ImportDataUIPublishOutputPath)" />
  </Target>
</Project>
